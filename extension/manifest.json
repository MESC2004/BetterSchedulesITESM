{
  "manifest_version": 3,
  "name": "Hello World Python Extension",
  "version": "1.0",
  "description": "A simple Chrome extension that calls a Python script",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "permissions": ["activeTab"],
  "host_permissions": [
    "http://127.0.0.1:5000/*"
  ]
}
